<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#255E72"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="144dp"
        android:layout_height="27dp"
        android:text="Name"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:background="@drawable/rectangle_button"
        android:ems="10"
        android:hint="  enter your full name"
        android:inputType="textPersonName"
        android:textColor="#255E72"
        android:textColorHint="#255E72"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="179dp"
        android:layout_height="33dp"
        android:text="Date of Birth"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:text="Country/Region"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="523dp" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:background="@drawable/rectangle_button"
        android:ems="10"
        android:hint="  enter your email "
        android:inputType="textPersonName"
        android:textColorHint="#255E72"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="183dp" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:background="@drawable/rectangle_button"
        android:ems="10"
        android:hint="  enter your password"
        android:inputType="textPersonName"
        android:textColorHint="#255E72"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:background="@drawable/rectangle_button"
        android:ems="10"
        android:hint="  enter your password"
        android:inputType="textPersonName"
        android:textColorHint="#255E72"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="449dp" />

    <EditText
        android:id="@+id/editPassword3"
        android:layout_width="357dp"
        android:layout_height="56dp"
        android:background="@drawable/rectangle_button"
        android:ems="10"
        android:hint="  enter your country"
        android:inputType="textPersonName"
        android:textColorHint="#255E72"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="572dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="135dp"
        android:layout_height="56dp"
        android:background="#255E72"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="651dp" />
</androidx.constraintlayout.widget.ConstraintLayout>